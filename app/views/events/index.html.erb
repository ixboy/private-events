<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%
=begin%>
 <table class="table table-bordered table-success table-hover ">
  <thead>

  <tr class= "table-dark">
      <th>Event name</th>
      <th>Description</th>
      <th>Venue</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.description %></td>
        <td><%= event.venue %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
<%
=end%>






<div class="container">
  <div class="d-flex">
    <article class="events col-md-3 mt-4">
      <h4>Past Events</h4>
      <%= list_past_events(@past_events) %>
    </article>
    <article class="events col-md-3 mt-4">
      <h4>Upcoming Events</h4>
      <%= list_upcoming_events(@upcoming_events) %>
    </article>
  </div>
</div>

<br>

<%= create_event_button%>
