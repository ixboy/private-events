<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "<< Back to Event", event_path(@event.id), class: "mt-2" %>
      <%= form_with url: new_invitation_path do |f| %>
        <div class="field">
          <h1>Invite User to Event</h1>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.submit "Send Invitation", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
